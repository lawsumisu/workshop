{
  "extends": [
    "tslint:recommended",
    "tslint-eslint-rules",
    "tslint-consistent-codestyle"
  ],
  "linterOptions": {
    "exclude": [
      "node_modules"
    ]
  },
  "rules": {
    "max-classes-per-file": false,
    "max-line-length": [true, { "limit": 140, "ignore-pattern": "^import"}],
    "no-console": {
      "severity": "warning",
      "options": [
        "debug", "info", "log", "time", "timeEnd", "trace"
      ]
    },
    "no-unused-expression": false,
    "object-literal-sort-keys": false,
    "quotemark": [true, "single"]
  }
}